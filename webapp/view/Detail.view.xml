<mvc:View displayBlock="true" controllerName="be.ap.Eindopdracht.controller.Detail" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:f="sap.f"
        xmlns:semantic="sap.f.semantic"
		xmlns:form="sap.ui.layout.form"
        xmlns:layout="sap.ui.layout">
    
    
	<m:NavContainer id="navContainer">
    <m:pages>
            <f:DynamicPage id="dynamicPage" toggleHeaderOnTitleClick="{/titleClickable}" class="sapUiNoContentPadding" showFooter="true"
                fitContent="true">
                <!-- DynamicPage Title -->
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <m:Title text="{Name}" wrapping="true" class="sapUiSmallMarginEnd"/>
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>
                <f:header>
                <f:DynamicPageHeader pinnable="true">
					<layout:HorizontalLayout allowWrapping="true">
						<layout:VerticalLayout class="sapUiMediumMarginEnd">
							<ObjectAttribute title="Location" text="Warehouse A"/>
							<ObjectAttribute title="Halway" text="23L"/>
							<ObjectAttribute title="Rack" text="34"/>
						</layout:VerticalLayout>
						<layout:VerticalLayout>
							<ObjectAttribute title="Availability"/>
							<ObjectStatus text="In Stock" state="Success" />
						</layout:VerticalLayout>
					</layout:HorizontalLayout>
				</f:DynamicPageHeader>
                </f:header>
                <!-- DynamicPage Content -->
                <f:content>
                    <form:SimpleForm>
                    </form:SimpleForm>
                </f:content>
                <!-- DynamicPage Footer -->
                <f:footer>
                    <m:OverflowToolbar>
                        <m:Button icon="sap-icon://alert" text="{=${message>/}.length} {i18n>errordetails}" visible="{=${message>/}.length > 0}" type="Emphasized"
                            press="onMessagePopoverPress"></m:Button>
                        <m:ToolbarSpacer/>
                        <m:Button type="Reject" text="Delete" press="onDeletePress" />
                        <m:Button type="Default" text="Save" press="onSavePress" />
                        <m:Button type="Default" text="Save as draft" press="onSaveDraftPress" />
                        <m:Button type="Emphasized" text="Submit" press="onSubmitPress" />
                        <m:Button type="Accept" text="Validate" press="onAcceptPress" />
                        <m:Button type="Reject" text="Reject" press="onRejectPress" />
                    </m:OverflowToolbar>
                </f:footer>
            </f:DynamicPage>
        </m:pages>
        </m:NavContainer>
    
</mvc:View>